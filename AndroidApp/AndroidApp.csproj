<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net6.0-android31.0</TargetFramework>
    <SupportedOSPlatformVersion>25.0</SupportedOSPlatformVersion>
    <OutputType>Exe</OutputType>
    <ApplicationId>MGAndroidClipFxApp6</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <RunAnalyzersDuringBuild>False</RunAnalyzersDuringBuild>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <PlatformTarget>ARM64</PlatformTarget>
    <PackageIcon>Icon.png</PackageIcon>
  </PropertyGroup>
 
  <ItemGroup>
    <PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.1.*" />
    <PackageReference Include="MonoGame.Framework.Android" Version="3.8.1.*" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\MGCoreStandard\MGCore.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Content\" />
  </ItemGroup>
  <ItemGroup>
    <MonoGameContentReference Include="..\MGCoreStandard\Content\Content.mgcb" Link="Content\Content.mgcb" />
  </ItemGroup>
  <Target Name="RestoreDotnetTools" BeforeTargets="Restore">
    <Message Text="Restoring dotnet tools" Importance="High" />
    <Exec Command="dotnet tool restore" />
  </Target>
  <ItemGroup>
    <AndroidResource Update="Resources\Drawable\Icon.png">
      <Generator></Generator>
    </AndroidResource>
  </ItemGroup>
</Project>